<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Play">

    <Button
        android:id="@+id/btnQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:text="Quit"
        android:textAllCaps="false"
        android:height="80px"
        android:width="80px" />

    <TextView
        android:layout_marginTop="20px"
        android:id="@+id/txtHeader"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtNum"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@+id/txtHeader"
        android:layout_marginLeft="100px"
        android:textAllCaps="false"
        android:text="1/15"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtEquation"
        android:layout_below="@+id/txtHeader"
        android:layout_marginTop="250px"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txtAnswer"
        android:layout_below="@+id/txtEquation"
        android:inputType="numberSigned"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your answer"
        android:ems="8" />

    <TextView
        android:id="@+id/txtScore"
        android:layout_below="@+id/txtAnswer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100px"
        android:text="Score: 0"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtMistake"
        android:layout_below="@+id/txtScore"
        android:layout_centerHorizontal="true"
        android:text="Mistakes: 0"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_below="@+id/txtMistake"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textAllCaps="false"
        android:height="80px"
        android:width="100px" />

    <Button
        android:id="@+id/btnRestart"
        android:layout_below="@+id/btnSubmit"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:textAllCaps="false"
        android:height="80px"
        android:width="100px" />

    <TextView
        android:id="@+id/txtRemarks"
        android:layout_below="@+id/btnRestart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200px"
        android:text=""
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>